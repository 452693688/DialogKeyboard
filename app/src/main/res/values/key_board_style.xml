<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--actiivty-->
    <style name="DialogTransparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 键盘排布局 -->
    <style name="KeyboardRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">1dp</item>
    </style>
    <!-- 键盘布局 -->
    <style name="KeyboardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/main_key_back_selector</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <!-- 键布局 数字 -->
    <style name="NumberKeyboardTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/keyboard_number_size</item>
    </style>
    <!-- 键布局 字母 -->
    <style name="EnglishKeyboardTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/keyboard_letter_size</item>
    </style>
    <!-- 键布局 汉字 -->
    <style name="ChineseKeyboardTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/keyboard_chinese_size</item>
    </style>
</resources>
